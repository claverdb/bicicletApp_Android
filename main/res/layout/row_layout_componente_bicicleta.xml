<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent" android:weightSum="100">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="66.6">

        <TextView
            android:id="@+id/txtTipo_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rueda"
            android:padding="10dp"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="#02302C" />

        <TextView
            android:id="@+id/txtMarca_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Razesa"
            android:padding="12dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#004C45" />
        <TextView
            android:id="@+id/txtPrecio_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20 euros"
            android:padding="12dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#2A716B" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="33.3">

        <TextView
            android:id="@+id/txtCantActual_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Cantidad: 0" />

        <TextView
            android:id="@+id/txtLocalizacion_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#022B03"
            android:textSize="30sp"
            android:text="Sector X, piso 1, balda 2" />

    </LinearLayout>

</LinearLayout>